<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <!-- Header with current user display -->
        <header class="header">
            <h1>ðŸ”§ Ally Agent Demo</h1>
            <div class="current-user">
                <% if (currentUser) { %>
                    <span class="user-badge">ðŸ‘¤ <%= currentUser.name %></span>
                <% } else { %>
                    <span class="user-badge no-user">ðŸ‘¤ No User Selected</span>
                <% } %>
            </div>
        </header>

        <div style="display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap;">
            <h2><%= title %></h2>
            <div class="actions-bar">
                <span class="enabled-counter">Enabled: <%= totalEnabledCount %> (<%= enabledToolsCount %> tools, <%= enabledToolGroupsCount %> groups)</span>
                <form action="/tools/update-external" method="POST">
                    <% if (totalEnabledCount > 0) { %>
                        <button type="submit" class="button button-success">
                            Update External Tools
                        </button>
                    <% } else { %>
                        <button type="submit" class="button button-secondary">
                            Update External Tools
                        </button>
                    <% } %>
                </form>
                <a href="/users" class="button button-info">ðŸ‘¥ Users</a>
                <a href="/tool-groups" class="button button-secondary">ðŸ“¦ Tool Groups</a>
            </div>
        </div>
        <div class="actions-bar">
            <a href="/new" class="button button-primary">Add New Tool</a>
            <a href="/new-tool-group" class="button button-success">Create Tool Group</a>
        </div>

        <% if (successMessage) { %>
            <div class="success-message">
                <%= successMessage %>
            </div>
        <% } %>

        <% if (tools && tools.length > 0) { %>
            <ul class="tool-list">
                <% tools.forEach(tool => { %>
                    <li class="tool-item">
                        <h2><a href="/tool/<%= tool.id %>"><%= tool.name %></a></h2>
                        <p class="description-preview"><%= tool.preview %></p>
                        <div class="actions-bar">
                            <% if (tool.isEnabled) { %>
                                <form action="/tools/toggle/<%= tool.id %>" method="POST">
                                    <button type="submit" class="button button-success">âœ“ Enabled</button>
                                </form>
                            <% } else { %>
                                <form action="/tools/toggle/<%= tool.id %>" method="POST">
                                    <button type="submit" class="button button-secondary">Enable Tool</button>
                                </form>
                            <% } %>
                        </div>
                    </li>
                <% }); %>
            </ul>
        <% } else { %>
            <p>No tools found. <a href="/new" class="button button-link">Add one!</a></p>
        <% } %>
    </div>

</body>
</html> 