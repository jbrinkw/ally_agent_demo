<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <div style="display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap;">
            <h1><%= title %></h1>
            <div style="display: flex; align-items: center; gap: 10px; flex-wrap: wrap;">
                <span class="enabled-counter">Enabled: <%= totalEnabledCount %> (<%= enabledToolsCount %> tools, <%= enabledToolGroupsCount %> groups)</span>
                <form action="/tools/update-external" method="POST" style="display: inline;">
                    <% if (totalEnabledCount > 0) { %>
                        <button type="submit" class="button button-success" style="background-color: #28a745;">
                            Update External Tools
                        </button>
                    <% } else { %>
                        <button type="submit" class="button button-secondary">
                            Update External Tools
                        </button>
                    <% } %>
                </form>
                <a href="/" class="button button-secondary">Back to Tools</a>
            </div>
        </div>
        
        <div style="margin-bottom: 20px;">
            <a href="/new-tool-group" class="button button-primary">Create New Tool Group</a>
            <a href="/import-mcp-server" class="button button-info" style="background-color: #17a2b8; margin-left: 10px;">Import MCP Server</a>
        </div>

        <% if (typeof successMessage !== 'undefined' && successMessage) { %>
            <div class="success-message" style="background-color: #d4edda; color: #155724; border: 1px solid #c3e6cb; border-radius: 4px; padding: 12px; margin-bottom: 20px;">
                <%= successMessage %>
            </div>
        <% } %>

        <% if (toolGroups && toolGroups.length > 0) { %>
            <ul class="tool-list">
                <% toolGroups.forEach(group => { %>
                    <li class="tool-item">
                        <h2><a href="/tool-group/<%= group.id %>"><%= group.name %></a></h2>
                        <p class="description-preview"><%= group.preview %></p>
                        <p style="color: #666; font-size: 0.9em; margin-bottom: 0;">
                            <strong><%= group.tool_count %></strong> tool<%= group.tool_count === 1 ? '' : 's' %> in this group
                        </p>
                        <div class="actions-bar" style="margin-top: 10px; border-top: none; padding-top: 0; display: flex; gap: 10px; align-items: center; flex-wrap: wrap;">
                            <% if (enabledToolGroups.includes(group.id)) { %>
                                <form action="/tool-groups/toggle/<%= group.id %>" method="POST" style="display: inline;">
                                    <button type="submit" class="button button-success" style="background-color: #28a745;">âœ“ Enabled</button>
                                </form>
                            <% } else { %>
                                <form action="/tool-groups/toggle/<%= group.id %>" method="POST" style="display: inline;">
                                    <button type="submit" class="button button-secondary">Enable Group</button>
                                </form>
                            <% } %>
                            <a href="/edit-tool-group/<%= group.id %>" class="button button-warning">Edit Group</a>
                            <form action="/delete-tool-group/<%= group.id %>" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this tool group?');">
                                <button type="submit" class="button button-danger">Delete Group</button>
                            </form>
                        </div>
                    </li>
                <% }); %>
            </ul>
        <% } else { %>
            <p>No tool groups found. <a href="/new-tool-group" class="button button-link">Create one!</a></p>
        <% } %>
    </div>
</body>
</html> 